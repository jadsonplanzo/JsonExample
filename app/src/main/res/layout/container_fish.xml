<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="fish name"
        android:id="@+id/alunoTxt"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textTurma"
        android:layout_alignStart="@+id/textTurma" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textTurma"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/alunoTxt"
        android:textColor="#666"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="sd"
        android:id="@+id/textSerie"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textTurma"
        android:textColor="#666"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="sd"
        android:id="@+id/textDisciplina"
        android:textColor="#666"
        android:layout_alignRight="@+id/alunoTxt"
        android:layout_alignEnd="@+id/alunoTxt"
        android:layout_alignTop="@+id/textSerie"
        android:layout_toRightOf="@+id/textTurma"
        android:layout_toEndOf="@+id/textTurma" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="sd"
        android:id="@+id/textNotas"
        android:textColor="#666"

        android:layout_below="@+id/textSerie"
        android:layout_alignLeft="@+id/textDisciplina"
        android:layout_alignStart="@+id/textDisciplina" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="sd"
        android:id="@+id/textUnidade"
        android:textColor="#666"

        android:layout_below="@+id/textSerie"
        android:layout_alignLeft="@+id/textDisciplina"
        android:layout_alignStart="@+id/textDisciplina" />

</RelativeLayout>